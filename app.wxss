/**app.wxss**/

page {
  height: 100%;
  background: #eee;
  font-size: 32rpx;
}

.defaultBg {
  background: #008000;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center;
  justify-content: space-between; */
  box-sizing: border-box;
}

/* 字体大小 */

.smallF {
  font-size: 26rpx;
  color: #ff9900;
}

.smallFs {
  font-size: 26rpx;
}

.textLine {
  text-decoration: line-through;
}

/* 默认样式 */

.descSize {
  font-size: 26rpx;
}

.defaultColor {
  color: #999999
}

/* button 默认 */

button {
  padding: 0;
  text-align: left;
}

button::after {
  border: none;
}

/* 中划线 */

.middleLine {
  text-decoration: line-through;
}

/* 边距 */

.mr {
  margin: 15rpx 0;
  box-sizing: border-box;
}

.mb {
  margin-bottom: 15rpx;
  box-sizing: border-box;
  background: #fff;
}

.pleft {
  padding-left: 20rpx;
}

/*修改步进器 */

.step>.plus, .step>.minus {
  border-radius: 50%;
  border: 1rpx solid red;
}

.step>.plus {
  background: red;
  color: #fff;
}

.step>.minus {
  color: red;
  background: transparent;
}

.step>.inputt {
  background: transparent;
}

/* 步进器 */

.stepBox view {
  height: 50rpx;
  width: 50rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}

.stepBox .sub {
  color: #000;
  border: 1px solid #888;
  border-radius: 50%;
}

.stepBox .number {
  font-size: 32rpx;
  font-family: ArialMT;
  color: rgba(3, 3, 3, 1);
  align-items: center;
}

.stepBox .add {
  color: rgb(102, 193, 140);
  border: 1px solid rgb(102, 193, 140);
  border-radius: 50%;
}