/* pages/person/person.wxss */

.container {
  height: auto;
}

.bgHeader {
  background: #00a046;
  height: 400rpx;
  display: flex;
  align-items: center;
  width: 100%;
}

.order {
  width: 100%;
  background: #fff;
}

.order_list {
  display: flex;
  height: 135rpx;
}

.order_list_cato {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #515151;
  font-size: 30rpx;
}

.row {
  height: 50px;
}

.col {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #fff;
}

.title {
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
}

.titleCol {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.contact {
  padding: 0;
  display: flex;
  background: #fff;
}