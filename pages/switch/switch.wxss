/* pages/switch/switch.wxss */

.addressInfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 160rpx;
    justify-content: center;
}

.address {
    width: 90%;
    display: flex;
    height: 60rpx;
}

.address>.left {
    flex: 3;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.address>.right {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    border: 1rpx solid;
    font-size: 26rpx;
    border-radius: 30rpx;
    color: red;
}

.title {
    height: 60rpx;
    display: flex;
    align-items: center;
}

.listCon {
    display: flex;
    background: #fff;
    border-bottom: 1rpx solid #eee;
    align-items: center;
    height: 130rpx;
    font-size: 26rpx;
}

.listCon>.left {
    display: flex;
    align-items: center;
    height: 100%;
}

.listCon>.middle, .right {
    display: flex;
    height: 80%;
    flex-direction: column;
    justify-content: center;
}

.listCon>.middle>.top, .bottom {
    flex: 1;
    display: flex;
    align-items: center;
}

.listCon>.right {
    align-items: center;
    font-size: 24rpx;
}

.listCon>.middle {
    flex: 2;
}

.listCon>.right {
    flex: 1;
}