<!-- pages/settle/settle.wxml -->
<view class="container">
    <!-- 接收人 -->
    <view class="head mr">
        <view class="name">收货人:</view>
        <input type="text" value="12" class="name1" />
        <input type="text" value="请输入手机号" class="phone" />
    </view>
    <!-- 订单信息 -->
    <view class="order mb">
        <view class="title">订单信息</view>
        <view class="orderCon">
            <view class="img">
                <van-image width="3rem" height="3rem" />
            </view>
            <view class="orderMid">
                <view class="title">海南直采凤梨</view>
                <view class="desc">[约1.2-1.6斤]</view>
            </view>
            <view class="orderRight">x1 5.00</view>
        </view>
    </view>
    <!-- bottom -->
    <view class="bottom">
        <view class="total">
            <view>应付金额:</view>
            <view class="botColor">8.00</view>
        </view>
        <view class="btn" catch:tap="btnTap">确认支付</view>
    </view>
</view>