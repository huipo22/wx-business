/* pages/settle/settle.wxss */

.head {
    display: flex;
    height: 80rpx;
    align-items: center;
    background: #ffffff;
}

.head>.name {
    flex: 1;
    height: 100%;
    font-size: 34rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
}

.head>.name1 {
    flex: 1;
    border: 1rpx solid #eee;
}

.head>.phone {
    flex: 2;
    border: 1rpx solid #eee;
    margin-left: 2%;
    margin-right: 5%;
    box-sizing: border-box;
}

/* order */

.order>.title {
    height: 80rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    align-items: center;
}

.orderCon {
    display: flex;
    height: 140rpx;
}

.orderCon>.img, .orderRight {
    flex: 1;
}

.orderCon>.orderMid {
    flex: 2;
}

.orderMid {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.orderMid>.title, .desc {
    flex: 1;
    display: flex;
    align-items: center;
}

.orderRight {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.orderCon>.img {
    display: flex;
    align-items: center;
    justify-content: center;
}

/* bottom */

.bottom {
    width: 100%;
    height: 80rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    background: #fff;
}

.bottom>.total {
    flex: 2;
    height: 100%;
    display: flex;
    align-items: center;
    padding-left: 5%;
}

.botColor {
    color: #ff704d;
}

.bottom>.btn {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ff9733;
    color: #fff;
}

.phonestyle {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 95%;
    line-height: 50rpx;
    font-size: 24rpx;
    color: #fff;
    width: 50%;
    background: #ff9733;
}

.top {
    height: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: #fff;
}

.top>.name, .address {
    display: flex;
}

.left {
    flex: 1;
}

.tuanName {
    flex: 4;
}

.con {
    background: #fff;
    display: flex;
    flex-direction: column;
    height: 120rpx;
}

.con>.name {
    display: flex;
    flex: 1;
}

.personInfo {
    flex: 4;
    display: flex;
}

.second {
    background: #fff;
}

.inputBox {
    border: 1rpx solid #eee;
}

.remark {
    display: flex;
    align-items: center;
    background: #fff;
    height: 80rpx;
}

.remark>.name {
    flex: 1;
}

.remark>.remarkInput {
    flex: 5;
}