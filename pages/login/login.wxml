<!-- pages/login/login.wxml -->
<view class="container">
    <view class="loginBox">
        <view class='header'>
            <image src='{{logoImg}}'></image>
        </view>
        <view class='content'>
            <view>申请获取以下权限</view>
            <text>获得你的公开信息(昵称，头像等)</text>
        </view>
        <button class='bottom' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="getUserInfoFun">
            授权登录
        </button>
    </view>
</view>