.container {}

.share, .person {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.post {
    flex: 2;
    display: flex;
}

.tuanInfo {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 3;
}

.tuanImg {
    flex: 1;
    display: flex;
    justify-content: center;
}

.shareInfo {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.titleBox {
    display: flex;
    background: #fff;
    margin: 15rpx;
    box-sizing: border-box;
    padding: 15rpx 0;
}

/* loop */

.loop {
    width: 100%;
    background: #fff;
}

.swiper-item {
    height: 100%;
}

#tab {
    background: #fff;
    height: 60rpx;
    line-height: 50rpx;
    white-space: nowrap;
    width: 100%;
}

.viewName {
    display: inline-block;
    width: 28%;
    height: 100%;
    text-align: center;
    /* line-height: 80rpx */
}

.goodList {
    padding: 0 15rpx;
    background: #fff;
}

.good {
    height: 360rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
}

.goodBottom {
    display: flex;
    justify-content: space-between;
    height: 80rpx;
    align-items: center;
}

.add, .step {
    height: 50rpx !important;
}

.desc {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
}

.desc>.time {
    flex: 3;
}

.desc>.descCon {
    flex: 1;
}

.price {
    color: red;
    font-size: 46rpx;
}

.time {
    color: #ffb380;
}

.goodName {
    height: 80rpx;
    align-items: center;
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.goodCon {
    height: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.addBtn {
    display: flex;
    align-items: center;
}

.priceBox {
    flex: 1;
    display: flex;
    align-items: baseline;
}

.activeTab {
    color: red;
}

/* 底部分享box */

.shareBox {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: #fff;
    z-index: 99;
}

.topBox {
    display: flex;
}

.topBox>.imgS {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cancel {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60rpx;
}

.postE {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.postE>view {
    background: red;
    color: #fff;
    width: 60%;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 30rpx;
}