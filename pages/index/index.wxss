/* pages/index.wxss */

.container {
  height: 100%;
}

.container-shop {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
  /* border: 1px solid; */
}

.cate_img {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 180rpx;
}

.img1 image {
  height: 120rpx;
  width: 120rpx;
}

.container-shop .left {
  width: 40%;
  background: #f1f1f3;
  /* height: 100vh; */
  font-size: 32rpx;
}

.container-shop .right {
  /* display: flex;
  flex-wrap: wrap;
  align-content: flex-start; */
  width: 100%;
}

.container-shop .right .img1 {
  width: 33%;
  /* border: 1px solid; */
}

.left_title {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  align-items: center;
}

.img_title {
  display: flex;
  justify-content: center;
}

.cont-detail {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}

.tab-show {
  display: flex;
}

.tab-hide {
  display: none;
}

.nav-list {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.add-tabing {
  color: #00a046;
  background: transparent;
}

.add-tabing:before {
  content: ' ';
  border-left: 3px solid #00a046;
  display: inline-block;
  height: 16px;
  position: absolute;
  left: 2%;
}

.Box {
  width: 100%;
  height: calc(100% - 70rpx);
  display: flex;
  background: transparent;
}

.Box>.left {
  width: 25%;
}

.Box>.right {
  width: 75%;
}

.card {
  width: 100%;
}

.cart-bo {
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
  position: absolute;
  bottom: 0;
  width: 100%;
}

.cate {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cartIcon {
  display: flex;
  align-items: center;
  margin-right: 25rpx;
}

.load {
  display: flex;
  justify-content: center;
  align-items: center;
  height: calc(100vh - 100rpx);
}

.categoryBox {
  display: flex;
  width: 100%;
  flex-wrap: nowrap;
  align-items: center;
  height: 100%;
}

.categoryBox>.cate {
  width: 100rpx;
  padding: 0 20rpx;
}

.tui-nav-active {
  background: #00a046;
  color: #fff;
}

.tui-nav-li {
  border-radius: 15rpx;
  margin: 10rpx;
  padding: 5rpx 15rpx;
  font-size: 22rpx;
}

.van-card {
  padding: 10rpx 0 !important;
}

.priceBox {
  display: flex;
  flex-direction: column;
}

.arrowBox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.down-arrow {
  display: inline-block;
  position: relative;
  width: 40rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.down-arrow::after {
  display: inline-block;
  content: " ";
  height: 18rpx;
  width: 18rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #999999;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform-origin: center;
  transition: transform .3s;
  position: absolute;
  top: 50%;
  right: 10rpx;
  margin-top: -10rpx;
}

.down-arrow.active::after {
  transform-origin: center;
  transform: rotate(-135deg);
  transition: transform .3s;
}

.popupBoxx {
  width: 100%;
  position: absolute;
  top: 73px;
  height: 200rpx;
  z-index: 999;
  background: #fff;
}

.categoryBox1 {
  width: 75%;
  height: auto;
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
}

.categoryBox1>.tui-nav-li {
  background: #ccc;
  border-radius: 15rpx;
  margin: 10rpx 20rpx;
  padding: 4rpx 25rpx;
  font-size: 22rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}