<view class="container">
    <!-- 定位信息 -->
    <!-- loop -->
    <view class="loop">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
            <block wx:for="{{background}}" wx:key="*this">
                <swiper-item>
                    <view class="swiper-item">{{item}}</view>
                </swiper-item>
            </block>
        </swiper>
    </view>
    <!-- tab -->
    <view>
        <scroll-view scroll-x="true" id="tab">
            <block wx:for="{{3}}" wx:key="index">
                <view wx:for-item="item" wx:key="index" class="viewName {{active==item.id?'activeTab':''}}">
                    {{index}}
                </view>
            </block>
        </scroll-view>
        <view class="goodList">
            <view class="good" catch:tap="detailtap">
                <image style="width:100%" mode="center" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>
            </view>
            <view>百草味乐享零食大礼包</view>
            <view class="goodBottom">
                <view>
                    ¥
                    <text>0.06</text>
                    <text>¥0.06</text>
                </view>
                <view class="addBtn">
                    <van-button round size="small" type="danger" custom-class="add">加入购物车</van-button>
                    <van-stepper value="{{ 1 }}" button-size="50rpx" plus-class="plus" minus-class="minus" custom-class="step" bind:change="onChange" />
                </view>
            </view>
        </view>
    </view>
</view>