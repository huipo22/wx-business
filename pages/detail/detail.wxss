/* pages/detail/detail.wxss */

.loop {
    width: 100%;
    background: #fff;
}

.swiper-item {
    height: 100%;
}

.btnBox {
    width: 100%;
    display: flex;
    height: 50px;
    justify-content: center;
    align-items: center;
}

.btnBox>.btn {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}

.add {
    background: red;
}

.submit {
    background: green;
}

/* middle */

.middle>.title, .desc {
    display: flex;
    height: 80rpx;
    background: #fff;
    border-bottom: 1rpx solid #eeee;
    align-items: center;
}

.middle>.title>.name {
    flex: 3;
    height: 100%;
    display: flex;
    align-items: center;
}

.middle>.title>.share {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
}

.middle>.desc>.time, .right {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
}

.middle {
    margin-bottom: 15rpx;
}

/* 详情 */

.detail {
    background: #fff;
}

.detail>.title {
    height: 80rpx;
    display: flex;
    align-items: center;
}