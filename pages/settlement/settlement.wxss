  /* margin: 0 5px; */
  background: #efefef;
  height: 100vh;
}

.redColor {
  color: red;
}

.bottom {
  width: 100%;
  display: flex;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 99;
  padding: 0 20rpx;
}

.bottom>.tag1 {
  flex: 3;
  display: flex;
  align-items: center;
  color: red;
}

.bottom>.tag2 {
  display: flex;
  align-items: center;
  flex: 1;
  background: red;
  color: #fff;
  justify-content: center;
}

.se_addressBox {
  width: 100%;
  display: flex;
  align-items: center;
  background: #fff;
}

.addressLeft {
  flex: 1;
}

.payRow {
  width: 100%;
  display: flex;
  padding: 20rpx 0;
  background: #fff;
  border-bottom: 1rpx solid #ccc;
}

.payRow>.single {
  flex: 1;
}

.marginBottom {
  width: 100%;
  /* margin-bottom: 100rpx; */
}

.row {
  height: 80rpx;
  /* border-top: 1rpx solid #ccc; */
}

.row3 {
  /* border-top: 1rpx solid #ccc; */
}

.row5 {
  height: 110rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.row4 {
  margin: 10rpx 0;
}

.col {
  height: 100%;
  display: flex;
  align-items: center;
}

.col3 {
  display: flex;
  align-items: center;
}

.col4 {
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
}

.van-cell {
  padding: 0 !important;
}

.addressB {
  padding: 10rpx 0;
  margin: 20rpx;
  background: #fff;
  border-radius: 5px;
}

.sty {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.sty view {
  flex: 1;
  display: flex;
  align-items: center;
}

.goodBox {
  height: 130rpx;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx;
  font-size: 26rpx;
}

.goodCon {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* font-size: 22rpx; */
}

.goodImg {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goodNum {
  height: 100%;
