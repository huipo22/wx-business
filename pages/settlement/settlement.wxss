  align-items: flex-end;
}

.img_p {
  padding: 5rpx 10rpx;
}

.good_info {
  height: 110rpx;
}

.rowTitle {
  height: 50px;
  border-top: 1rpx solid #ccc;
  font-size: 16px;
  /* font-weight: bold; */
}

.iconA {
  justify-content: center;
}

.orderCon {
  margin: 20rpx;
  background: #fff;
  padding: 10rpx 0;
  border-radius: 5px;
}

.orderTitle {
  height: 100%;
  display: flex;
  align-items: center;
  /* border-bottom: 1rpx solid #ccc; */
}

.noneLine {
  border: none;
}

.Title {
  /* border-bottom: 1rpx solid #ccc; */
}

.radioBox {
  display: flex;
