.title {
    background: #fff;
    margin: 15rpx 0;
    font-size: 32rpx;
    box-sizing: border-box;
    padding: 15rpx 20rpx;
}

.cart {
    background: #fff;
    display: flex
}

.imgBox, .stepBox {
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.stepBox {
    margin-right: 4%;
}

.imgCon {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 2;
}

/* bottom */

.bottom {
    width: 100%;
    height: 80rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    background: #fff;
}

.bottom>.total {
    flex: 2;
    height: 100%;
    display: flex;
    align-items: center;
    padding-left: 15%;
    color: #ff704d;
}
.bottom>.btn{
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #00a046;
    color: #fff;
}